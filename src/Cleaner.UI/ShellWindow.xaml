<ui:FluentWindow
    x:Class="Cleaner.UI.ShellWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Cleaner.UI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:viewers="clr-namespace:Cleaner.UI.Viewers"
    Title="ShellWindow"
    Width="500"
    Height="490"
    MinWidth="500"
    MinHeight="490"
    ExtendsContentIntoTitleBar="True"
    WindowBackdropType="Mica"
    WindowCornerPreference="Round"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <ui:TitleBar
            x:Name="TitleBar"
            Title="Directory Cleaner"
            ForceShutdown="False"
            ShowMaximize="False">
            <ui:TitleBar.Icon>
                <ui:ImageIcon Source="/directory-cleaner.ico" />
            </ui:TitleBar.Icon>
        </ui:TitleBar>

        <Grid Grid.Row="1" Margin="10,5,10,10">
            <viewers:SettingView />
        </Grid>
    </Grid>
</ui:FluentWindow>
